<h1 class="text-center mt-4"><%= @user.username%>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    <% end %>
</div>

<h3 class="text-center mt-4"><%= @user.username%>'s articles</h3>

<div class="row justify-content-md-center mb-2">
    <%= will_paginate @articles, :previous_label => '← Previous', 
    :next_label => 'Next →'  %>
</div>

<%= render 'articles/article'%>

<div class="row justify-content-md-center mb-2">
    <%= will_paginate @articles, :previous_label => '← Previous', 
    :next_label => 'Next →'  %>
</div>