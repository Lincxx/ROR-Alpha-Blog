<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, local: true) do |f| %>
            <div class"form-group row mx-auto">
                <%= f.label :usename, class: "col-form-label" %>
                <div class="">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
                </div>
            </div>



            <div class"form-group row">
                <%= f.label :email, class: "col-form-label"%>
                <div class="">
                <%= f.email_field :email,  class: "form-control", placeholder: "Enter an email" %>
                </div>
            </div>

            <div class"form-group row">
                <%= f.label :password, class: "col-form-label"%>
                <div class="">
                <%= f.password_field :password,  class: "form-control", placeholder: "Enter a password" %>
                </div>
            </div>

            <div class="form-group row justify-content-center mt-4">
                <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-info btn-lg" )%>
            </div>

            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to "[Cancel and Return to aticles listing]", articles_path%>
        </div>
    </div>
</div>