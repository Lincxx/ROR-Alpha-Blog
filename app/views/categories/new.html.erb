<h1 class="text-center mt-4">Create a new Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, local: true) do |f| %>
            <div class"form-group row mx-auto">
                <%= f.label :name, "Category name", class: "col-form-label" %>
                <div class="">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter a category" %>
                </div>
            </div>

            <div class="form-group row justify-content-center mt-4">
                <%= f.submit class: "btn btn-outline-info btn-lg" %>
            </div>

            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to "[Cancel and Return to aticles listing]", articles_path%>
        </div>
    </div>
</div>